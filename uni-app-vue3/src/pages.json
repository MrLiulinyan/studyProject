{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/classify/classify",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "分类"
      }
    },
    {
      "path": "pages/myCenter/myCenter",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/classifyDetail/classifyDetail",
      "style": {
        "navigationBarTitleText": "分类"
      }
    },
    {
      "path": "pages/preview/preview",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "预览"
      }
    },
    {
      "path": "pages/notice/notice",
      "style": {
        "navigationBarTitleText": "公告详情"
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#0fb27c",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/images/home.png",
        "selectedIconPath": "static/images/home-h.png",
        "text": "推荐"
      },
      {
        "pagePath": "pages/classify/classify",
        "iconPath": "static/images/classify.png",
        "selectedIconPath": "static/images/classify-h.png",
        "text": "分类"
      },
      {
        "pagePath": "pages/myCenter/myCenter",
        "iconPath": "static/images/user.png",
        "selectedIconPath": "static/images/user-h.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
